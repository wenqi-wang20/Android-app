<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/news_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/news_info_photo"
                        android:layout_width="match_parent"
                        android:layout_height="530dp" />

                    <TextView
                        android:id="@+id/news_info_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/news_info_photo"
                        android:layout_alignParentLeft="true"
                        android:padding="5dp"
                        android:textColor="@color/miniTitle"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/news_info_publish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/news_info_title"
                        android:layout_alignParentLeft="true"
                        android:padding="5dp"
                        android:textSize="10sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/news_info_desc"
                    android:singleLine="false"
                    android:lineSpacingExtra="5dp"
                    android:layout_below="@+id/news_header"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</RelativeLayout>
